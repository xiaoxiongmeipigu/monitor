<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="17dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="服务"
        android:textColor="@color/light_black"
        android:textSize="@dimen/text_big"
        android:gravity="center_vertical"
        android:background="@color/background_gray"
        android:paddingLeft="@dimen/margin_2"
        android:paddingRight="@dimen/margin_2"
        />

    <LinearLayout
        android:id="@+id/discount_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp"
        android:paddingLeft="@dimen/margin_2"
        android:paddingRight="@dimen/margin_2"
        >

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="无折扣项："
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            />

        <TextView
            android:id="@+id/discount_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            android:lineSpacingMultiplier="1.3"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/score_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp"
        android:paddingLeft="@dimen/margin_2"
        android:paddingRight="@dimen/margin_2"
        >

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="无返分项："
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            />

        <TextView
            android:id="@+id/score_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            android:lineSpacingMultiplier="1.3"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/care_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp"
        android:paddingLeft="@dimen/margin_2"
        android:paddingRight="@dimen/margin_2"
        >

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="注意事项："
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            />

        <TextView
            android:id="@+id/care_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            android:lineSpacingMultiplier="1.3"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/stop_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp"
        android:paddingLeft="@dimen/margin_2"
        android:paddingRight="@dimen/margin_2"
        >

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="能否停车："
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            />

        <TextView
            android:id="@+id/stop_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            android:lineSpacingMultiplier="1.3"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp"
        android:paddingLeft="@dimen/margin_2"
        android:paddingRight="@dimen/margin_2"
        >

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="能否刷卡："
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            />

        <TextView
            android:id="@+id/card_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            android:lineSpacingMultiplier="1.3"
            />

    </LinearLayout>



</LinearLayout>