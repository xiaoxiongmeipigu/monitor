<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zjhj.monitor.activity.shops.ShopDetailActivity"
    android:background="@color/background_gray"
    >

    <include
        layout="@layout/lay_header"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lay_header"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.zjhj.monitor.view.ShopSliderLayout
                android:id="@+id/shopSliderLayout"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                />

            <LinearLayout
                android:id="@+id/desc_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_45dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/shop_white"
                android:layout_marginTop="@dimen/margin_10dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shop_logo"
                    android:layout_marginLeft="@dimen/margin_2"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/shop_black"
                    android:textSize="@dimen/text_big_x"
                    android:text="商户详情介绍"
                    android:layout_marginLeft="@dimen/margin_2"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_gray"
                    android:paddingLeft="@dimen/margin_2"
                    android:paddingRight="@dimen/margin_2"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90.5dp"
                android:orientation="vertical"
                android:background="@color/shop_white"
                android:layout_marginTop="@dimen/margin_10dp"
                >

                <LinearLayout
                    android:id="@+id/phone_ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_height_45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/phone_big"
                        android:layout_marginLeft="@dimen/margin_2"
                        />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/shop_black"
                        android:textSize="@dimen/text_big_x"
                        android:layout_marginLeft="@dimen/margin_2"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider_line"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:layout_marginRight="@dimen/margin_2"
                    />

                <LinearLayout
                    android:id="@+id/addr_ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_height_45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/addr_big"
                        android:layout_marginLeft="@dimen/margin_2"
                        />

                    <TextView
                        android:id="@+id/addr_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/shop_black"
                        android:textSize="@dimen/text_big_x"
                        android:layout_marginLeft="@dimen/margin_2"
                        android:maxLines="2"
                        android:ellipsize="end"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/right_gray"
                        android:paddingLeft="@dimen/margin_2"
                        android:paddingRight="@dimen/margin_2"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90.5dp"
                android:orientation="vertical"
                android:background="@color/shop_white"
                android:layout_marginTop="@dimen/margin_10dp"
                >

                <LinearLayout
                    android:id="@+id/feedback_ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_height_45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/feedback_logo"
                        android:layout_marginLeft="@dimen/margin_2"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="信息反馈"
                        android:textColor="@color/shop_black"
                        android:textSize="@dimen/text_big_x"
                        android:layout_marginLeft="@dimen/margin_2"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/right_gray"
                        android:paddingLeft="@dimen/margin_2"
                        android:paddingRight="@dimen/margin_2"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider_line"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:layout_marginRight="@dimen/margin_2"
                    />

                <LinearLayout
                    android:id="@+id/monitor_ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_height_45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/monitor_gray"
                        android:layout_marginLeft="@dimen/margin_2"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="实时监控"
                        android:textColor="@color/shop_black"
                        android:textSize="@dimen/text_big_x"
                        android:layout_marginLeft="@dimen/margin_2"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/right_gray"
                        android:paddingLeft="@dimen/margin_2"
                        android:paddingRight="@dimen/margin_2"
                        />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
