<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zjhj.monitor.activity.shops.FeedbackActivity"
    android:background="@color/background_gray"
    >

    <include
        layout="@layout/lay_header"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lay_header"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/shop_white"
                android:paddingLeft="@dimen/margin_2"
                android:paddingRight="@dimen/margin_2"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/feedback_big_logo"
                    />

                <EditText
                    android:id="@+id/title_et"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/shop_black"
                    android:textSize="@dimen/text_big_xx"
                    android:hint="请在此输入主题"
                    android:textColorHint="@color/light_black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/margin_3"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_2"
                />

            <EditText
                android:id="@+id/info_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="140dp"
                android:background="@color/shop_white"
                android:padding="@dimen/margin_2"
                android:hint="请在此输入您想反馈的内容"
                android:textColor="@color/shop_black"
                android:textSize="@dimen/text_big_xx"
                android:textColorHint="@color/light_black"
                android:lineSpacingMultiplier="1.3"
                android:gravity="top|left"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:background="@color/shop_white"
                android:paddingLeft="@dimen/margin_2"
                android:paddingRight="@dimen/margin_2"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/shop_black"
                    android:textSize="@dimen/text_big_xx"
                    android:text="您的姓名："
                    />

                <EditText
                    android:id="@+id/name_et"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/shop_black"
                    android:textSize="@dimen/text_big_xx"
                    android:hint="请输入姓名"
                    android:textColorHint="@color/light_black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/margin_3"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:background="@color/shop_white"
                android:paddingLeft="@dimen/margin_2"
                android:paddingRight="@dimen/margin_2"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/shop_black"
                    android:textSize="@dimen/text_big_xx"
                    android:text="您的电话："
                    />

                <EditText
                    android:id="@+id/phone_et"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/shop_black"
                    android:textSize="@dimen/text_big_xx"
                    android:hint="请输入电话"
                    android:textColorHint="@color/light_black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/margin_3"
                    android:inputType="phone"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:background="@drawable/rect_solid_blue_round_25"
                android:text="提交反馈"
                android:textColor="@color/shop_white"
                android:textSize="@dimen/text_big_xx"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_2"
                android:layout_marginTop="60dp"
                />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
