<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="17dp"
    android:paddingLeft="@dimen/margin_2"
    android:paddingRight="@dimen/margin_2"
    >

    <LinearLayout
        android:id="@+id/area_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp"
        >

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="营业面积："
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            />

        <TextView
            android:id="@+id/area_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="300平方米"
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            android:lineSpacingMultiplier="1.3"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/capacity_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp"
        >

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="大厅容量："
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            />

        <TextView
            android:id="@+id/capacity_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="200人"
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            android:lineSpacingMultiplier="1.3"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/style_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        >

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="环境风格："
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            />

        <TextView
            android:id="@+id/style_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="东南亚海岛风格"
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            android:lineSpacingMultiplier="1.3"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/book_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        >

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="是否包场："
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            />

        <TextView
            android:id="@+id/book_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="可以"
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            android:lineSpacingMultiplier="1.3"
            />

    </LinearLayout>


</LinearLayout>